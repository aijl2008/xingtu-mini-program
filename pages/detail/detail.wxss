/* pages/detail/detail.wxss */
.container{
  width: 100%;
}

.video{
  width: 100%;
}

.video-msg-container{
  width: 100%;
  padding: 32rpx 32rpx 0 32rpx;
}

.video-msg-container .video-title{
  display: block;
  width: 100%;
  font-size: 32rpx;
  line-height: 1.1;
}

.video-msg-container .total-looked-number{
  width: 100%;
  font-size: 24rpx;
  line-height: 1;
  color: #AAA;
}

.share-msg-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.share-msg-container .item-container{
  display: flex;
  align-items: center;
  border: none;
}

.share-msg-container .item-container .icon{
  width: 48rpx;
  height: 48rpx;
}

.share-msg-container .item-container .number{
  font-size: 28rpx;
  line-height: 1;
  padding: 0 16rpx;
}

.user-msg-container{
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #DDD;
  border-bottom: 1rpx solid #DDD;
}

.user-msg-container .user-header{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  flex: none;
}

.user-msg-container .user-name{
  flex: 1;
  padding: 0 16rpx;
  font-size: 24rpx;
  line-height: 1;
  font-weight: bold;
}

.user-msg-container .follow{
  width: 120rpx;
  font-size: 24rpx;
  line-height: 0;
  padding: 18rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #FFF;
  background: #00AA00;
}

.user-msg-container .cancel-follow{
  width: 120rpx;
  font-size: 24rpx;
  line-height: 0;
  padding: 18rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid #CCC;
}

.video-list-container{
  width: 100%;
  padding: 32rpx 32rpx 0 32rpx;
  display: flex;
  justify-content: space-between;
}

.collection-left-container,
.collection-right-container{
  display: flex;
  flex-direction: column;
}

.go-home{
  width: 180;
  font-size: 32rpx;
  line-height: 0;
  padding: 18rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #00AA00;
  background: #ffffff;
  border: 1rpx solid #00AA00;
}

.more-video{
  width: 240rpx;
  font-size: 32rpx;
  line-height: 0;
  padding: 18rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #00AA00;
  background: #ffffff;
  border: 1rpx solid #00AA00;
}