.member-container {
    width: 100%;
    padding: 17rpx 32rpx 32rpx 32rpx;
}

.member-msg-container {
    width: 100%;
    display: flex;
    align-items: center;
}

.member-header {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.member-detail-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-left: 16rpx;
}

.member-nick-name {
    font-size: 36rpx;
    line-height: 1;
    color: #000;
    margin-left: 7rpx;
    font-weight: 700;

}

.member-numbers {
    color: #ccc;
    font-size: 24rpx;
    line-height: 1;
    margin-top: 12rpx;
}


.th_share_box {
    width: 100%;
    float: left;
    margin-top: 14rpx
}

.unfollow-btn {
    font-size: 24rpx;
    line-height: 52rpx;
    color: #FFF;
    background: #CCCCCC;
    border-radius: 25rpx;
    width: 35%;
    float: left;
    margin-left: 15rpx;
    text-align: center;
    height: 52rpx;
}


.follow-btn {
    font-size: 24rpx;
    line-height: 52rpx;
    color: #FFF;
    background: #00AA00;
    border-radius: 25rpx;
    width: 35%;
    float: left;
    margin-left: 15rpx;
    text-align: center;
    height: 52rpx;
}


.em-follow-container {
    width: 100%;
    padding: 0 32rpx;
    margin-top: 32rpx;
    display: flex;
    align-items: center;
    height: 80rpx;

}

.em-follow-container .follow-number text,
.em-follow-container .fans-number text {
    width: 100%;
    float: left;
}

.th_fontw {
    font-size: 36rpx;
    font-weight: 700;

}

.em-follow-container .follow-number,
.em-follow-container .fans-number {
    font-size: 24rpx;
    color: #000;
    width: 23%;
    text-align: center;
    margin-right: 32rpx;
}

.header {
    width: 100%;

    display: flex;
    flex-direction: column;

}

.member-video-list-container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 12rpx;
}

.member-video-item {
    width: 50%;
    padding: 10rpx;
    border-radius: 8rpx;
}

.video-list-container {
    width: 100%;
    padding: 32rpx 0;
    display: flex;
    justify-content: space-between;
}

.collection-left-container,
.collection-right-container {
    display: flex;
    flex-direction: column;
}

/* 遮罩 */

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg {
    width: 100%;
    height: 319rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;

    background-color: #fff;

    display: flex;

    align-items: center;

}

.message-container {
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: none;
    float: left;
    height: 150rpx;
    background: none;
}

button::after {
    border: none;
}

.message-container .icon {
    width: 106rpx;
    height: 129rpx;

}

.message-container .number {
    margin-top: 16rpx;
    color: #000;
    font-size: 28rpx;
    line-height: 1;

}