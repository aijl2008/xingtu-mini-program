/* pages/login/login.wxss */
.container{
  width: 100%;
  height: 90vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.login-icon{
  width: 264rpx;
  height: 264rpx;
  margin-bottom: 100rpx;
  border-radius: 50%;
  transform: translate3d(0, -50rpx, 0);
}

.container .get-user-btn{
  width: 260rpx;
  height: 80rpx;
  background: #00AA00;
  border-radius: 40rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 0;
  padding: 40rpx 0;
  color: #FFF;
  border: none;
}
