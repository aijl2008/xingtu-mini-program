/* pages/user/statistics.wxss */

.container {
width: 100%;
text-align: center;
height: 200px;
}

.statistics-block {
height: 205rpx;
margin: 10rpx 0;
margin-left: 18rpx;
color: inherit;
display: block;
width: 30%;
float: left;
/* padding:5 rpx; */
background-color: #fff;
/* padding-right:15px; *//* padding-left:15px; */
border-radius: 6px;
box-shadow: 2px 2px 5px 2px #efefef;
}

.statistics-block ::after{
clear: both;
}

.statistics-name {
display: block;
text-align: center;
color: #000;
font-size: 26rpx;
margin-top: 14rpx;
width: 100%;
float: left;
}

.statistics-title {
display: block;
text-align: center;
color: #000;
font-size: 26rpx;
margin-top: 14rpx;
width: 100%;
float: left;
}



.statistics-number {
display: block;
text-align: center;
color: #00AA00;
font-size: 91rpx;
margin-top: 30rpx; 
width: 100%;
font-weight: 700;
}

.statistics-image{width:100%}


.item-header{
width:100%;
display:block;
align-items:center;
border-left:8rpx solid #00AA00;
padding-left:16rpx;
line-height:1;
top:24px;
float:left;
text-align:left;
margin-top:50rpx;

}