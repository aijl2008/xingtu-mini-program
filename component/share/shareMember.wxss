}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.share-container {
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: none;
    float: left;
    height: 150rpx;
    background: none;
}
.share-dialog {
    width: 100%;
    height: 319rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background-color: #fff;
    display: flex;
    align-items: center;
}

.share-container .icon {
