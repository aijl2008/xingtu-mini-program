/* component/share/share.wxss */
 .icon-container{
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: none;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.1;
}

.share-container {
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: none;
    float: left;
    height: 150rpx;
    background: none;
}
.share-dialog {
    width: 100%;
    height: 319rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background-color: #fff;
    display: flex;
    align-items: center;
}

.share-container .icon {
    width: 106rpx;
    height: 129rpx;

}

.share-container .number {
    margin-top: 16rpx;
    color: #000;
    font-size: 28rpx;
    line-height: 1;

}

.icon{
  width: 50rpx;
  height: 50rpx;
}

.number{
  margin-top: 16rpx;
  color: #CCC;
  font-size: 16rpx;
  line-height: 1;
}